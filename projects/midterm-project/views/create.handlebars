<h1>New Item Listing</h1>
<article>
    <form method="POST" action="/api/newlisting">
        <div class="input-field">
            <label>IGN:</label>
            <input type="text" name="ign" size="15" placeholder="IGN">
        </div>
         <div class="input-field">
            <label>Item:</label>
            <input type="text" name="item" size="25" placeholder="Item Name">
        </div>
        <div>
            <label>Item Type:</label>
            <fieldset class="type">
                <input type="radio" id="equip" name="type" value="equip" checked>Equip
                <input type="radio" id="use" name="type" value="use">Use
                <input type="radio" id="setup" name="type" value="setup">Setup
                <input type="radio" id="etc" name="type" value="etc">Etc
            </fieldset>
        </div>
        <div class="input-field">
            <label>Required Job(s):</label>
            <fieldset class="jobs">
                <div>
                    <input type="checkbox" id="Beginner" name="jobs" value="Beginner">Beginner
                </div>
                <div>
                    <input type="checkbox" id="Warrior" name="jobs" value="Warrior">Warrior
                </div>
                <div>
                    <input type="checkbox" id="Magician" name="jobs" value="Magician">Magician
                </div>
                <div>
                    <input type="checkbox" id="Bowman" name="jobs" value="Bowman">Bowman
                </div>
                <div>
                    <input type="checkbox" id="Thief" name="jobs" value="Thief">Thief
                </div>
                <div>
                    <input type="checkbox" id="Pirate" name="jobs" value="Pirate">Pirate
                </div>
            </fieldset>
        </div>
        <div class="input-field">
            <label>Selling Price:</label>
            <input type="number" name="price" min="1000" max="4999999999">
        </div>
        <button type="submit">Create New Listing</button>
    </form>
</article>
